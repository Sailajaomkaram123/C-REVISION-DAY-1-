#include<stdio.h>
#include<conio.h>
int main()
{
    int n, i, sum=0;
    printf(" Enter a number: ");
    scanf("%d", &n);
    for(i=1;i<n;i++)
    {
        if(n%i==0)
        {
            sum=sum+i;
        }
    }
    if(sum==n)
        printf("\n %d is a Perfect Number.",n);
    else
        printf("\n %d is Not a Perfect Number.",n);
 
    getch();
}
